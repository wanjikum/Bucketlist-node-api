  "schemes": ["https", "http"],
  "tags": [
    {
      "name": "user",
      "description": "Authorises user access into the application"
    },
    {
      "name": "bucketlist",
      "description": "Gives one power to Create, Edit, View and Delete Bucketlists"
    },
    {
      "name": "bucketlistItem",
      "description": "Gives one power to Create, Edit, View and Delete Bucketlist Items"
    }
  ],
  "basePath": "/api/v1",
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "host": "bucketlist-node-api.herokuapp.com",
  "definitions": {
    "bucketlist": {
      "type": "object",
      "properties": {
        "status": {
          "enum": ["done", "in progress", "to do"],
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "user": {
      "type": "object",
      "properties": {
        "lastName": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        }
      }
    },
    "bucketlistItem": {
      "type": "object",
      "properties": {
        "status": {
          "enum": ["done", "in progress", "to do"],
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  },
  "swagger": "2.0"
}
