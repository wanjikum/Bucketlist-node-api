          {
            "required": true,
            "in": "body",
            "description": "Created user object",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": ["application/json"],
        "operationId": "loginUser",
        "tags": ["user"],
